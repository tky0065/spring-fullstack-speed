<div class="login-container">
  <div class="login-card">
    <h2>Connexion</h2>
    <form [formGroup]="loginForm" (ngSubmit)="onSubmit()" class="login-form">

      <div class="form-group">
        <label for="username">Nom d'utilisateur</label>
        <input
          type="text"
          id="username"
          formControlName="username"
          class="form-control"
          [class.is-invalid]="submitted && loginForm.controls['username'].errors">
        @if (submitted && loginForm.controls['username'].errors) {
          <div class="error-message">
            Le nom d'utilisateur est requis
          </div>
        }
      </div>

      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input
          type="password"
          id="password"
          formControlName="password"
          class="form-control"
          [class.is-invalid]="submitted && loginForm.controls['password'].errors">
        @if (submitted && loginForm.controls['password'].errors) {
          <div class="error-message">
            Le mot de passe est requis
          </div>
        }
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Se connecter</button>
      </div>

      @if (loginError) {
        <div class="alert alert-danger">
          Identifiants incorrects. Veuillez réessayer.
        </div>
      }

    </form>

    <div class="login-footer">
      <p>Vous n'avez pas de compte ? <a href="#">S'inscrire</a></p>
      <p><a href="#">Mot de passe oublié ?</a></p>
    </div>
  </div>
</div>

