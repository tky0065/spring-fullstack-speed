@import <%= packageName %>.model.dto.UserDto

@param UserDto user
@param boolean isLoggedIn

@template.layouts.main(
    title = "Accueil",
    content = @`
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-blue-600 text-white p-4">
                <h2 class="text-2xl font-bold">Bienvenue sur <%= appName %></h2>
            </div>
            <div class="p-6">
                <p class="text-lg text-gray-700 mb-4">Ceci est la page d'accueil générée par Spring Fullstack Speed.</p>

                @if(isLoggedIn)
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4">
                        <p>Bonjour, ${user.firstName} ${user.lastName}!</p>
                        <p>Vous êtes connecté.</p>
                        <a href="/logout" class="mt-2 inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors">Se déconnecter</a>
                    </div>
                @else
                    <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4">
                        <p>Vous n'êtes pas connecté.</p>
                        <div class="mt-3">
                            <a href="/login" class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors mr-2">Se connecter</a>
                            <a href="/register" class="inline-block px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-50 transition-colors">S'inscrire</a>
                        </div>
                    </div>
                @endif

                <hr class="my-6 border-gray-200">
                <h3 class="text-xl font-semibold mb-4">Fonctionnalités disponibles</h3>
                <ul class="space-y-2">
                    <li class="bg-gray-50 p-3 rounded border border-gray-200">Base de données: <%= database %></li>
                    <li class="bg-gray-50 p-3 rounded border border-gray-200">API REST complète</li>
                    <% if (additionalFeatures.includes('openapi')) { %>
                    <li class="bg-gray-50 p-3 rounded border border-gray-200">Documentation OpenAPI</li>
                    <% } %>
                    <% if (includeAuth) { %>
                    <li class="bg-gray-50 p-3 rounded border border-gray-200">Authentification sécurisée</li>
                    <% } %>
                </ul>
            </div>
            <div class="bg-gray-100 px-6 py-3 text-gray-600 text-sm">
                <a href="https://github.com/tky0065/spring-fullstack-speed" class="text-blue-600 hover:underline" target="_blank">GitHub</a> |
                <a href="/api/docs" class="text-blue-600 hover:underline" target="_blank">Documentation API</a>
            </div>
        </div>
    </div>
`
)
