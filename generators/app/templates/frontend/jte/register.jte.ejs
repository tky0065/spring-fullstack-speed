@import <%= packageName %>.model.dto.RegisterRequest

@param RegisterRequest registerRequest = null
@param java.util.Map<String, String> errors = null

@template.layouts.main(
    title = "Inscription",
    content = @`
    <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Créer un compte
            </h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <form class="space-y-6" action="/register" method="post">
                    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                        <div>
                            <label for="firstName" class="block text-sm font-medium text-gray-700">
                                Prénom
                            </label>
                            <div class="mt-1">
                                <input type="text" id="firstName" name="firstName" required
                                       class="appearance-none block w-full px-3 py-2 border ${errors != null && errors.containsKey("firstName") ? 'border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500'} rounded-md shadow-sm placeholder-gray-400 sm:text-sm"
                                       value="${registerRequest != null ? registerRequest.getFirstName() : ""}">
                                @if(errors != null && errors.containsKey("firstName"))
                                    <p class="mt-2 text-sm text-red-600">${errors.get("firstName")}</p>
                                @endif
                            </div>
                        </div>

                        <div>
                            <label for="lastName" class="block text-sm font-medium text-gray-700">
                                Nom
                            </label>
                            <div class="mt-1">
                                <input type="text" id="lastName" name="lastName" required
                                       class="appearance-none block w-full px-3 py-2 border ${errors != null && errors.containsKey("lastName") ? 'border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500'} rounded-md shadow-sm placeholder-gray-400 sm:text-sm"
                                       value="${registerRequest != null ? registerRequest.getLastName() : ""}">
                                @if(errors != null && errors.containsKey("lastName"))
                                    <p class="mt-2 text-sm text-red-600">${errors.get("lastName")}</p>
                                @endif
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">
                            Email
                        </label>
                        <div class="mt-1">
                            <input id="email" name="email" type="email" autocomplete="email" required
                                   class="appearance-none block w-full px-3 py-2 border ${errors != null && errors.containsKey("email") ? 'border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500'} rounded-md shadow-sm placeholder-gray-400 sm:text-sm"
                                   value="${registerRequest != null ? registerRequest.getEmail() : ""}">
                            @if(errors != null && errors.containsKey("email"))
                                <p class="mt-2 text-sm text-red-600">${errors.get("email")}</p>
                            @endif
                        </div>
                    </div>

                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700">
                            Nom d'utilisateur
                        </label>
                        <div class="mt-1">
                            <input id="username" name="username" type="text" required
                                   class="appearance-none block w-full px-3 py-2 border ${errors != null && errors.containsKey("username") ? 'border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500'} rounded-md shadow-sm placeholder-gray-400 sm:text-sm"
                                   value="${registerRequest != null ? registerRequest.getUsername() : ""}">
                            @if(errors != null && errors.containsKey("username"))
                                <p class="mt-2 text-sm text-red-600">${errors.get("username")}</p>
                            @endif
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">
                            Mot de passe
                        </label>
                        <div class="mt-1">
                            <input id="password" name="password" type="password" required
                                   class="appearance-none block w-full px-3 py-2 border ${errors != null && errors.containsKey("password") ? 'border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500'} rounded-md shadow-sm placeholder-gray-400 sm:text-sm">
                            @if(errors != null && errors.containsKey("password"))
                                <p class="mt-2 text-sm text-red-600">${errors.get("password")}</p>
                            @endif
                        </div>
                    </div>

                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700">
                            Confirmer le mot de passe
                        </label>
                        <div class="mt-1">
                            <input id="confirmPassword" name="confirmPassword" type="password" required
                                   class="appearance-none block w-full px-3 py-2 border ${errors != null && errors.containsKey("confirmPassword") ? 'border-red-300 text-red-900 placeholder-red-300 focus:outline-none focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500'} rounded-md shadow-sm placeholder-gray-400 sm:text-sm">
                            @if(errors != null && errors.containsKey("confirmPassword"))
                                <p class="mt-2 text-sm text-red-600">${errors.get("confirmPassword")}</p>
                            @endif
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            <input id="terms" name="terms" type="checkbox" required
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded ${errors != null && errors.containsKey("terms") ? 'border-red-300' : ''}">
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="terms" class="font-medium text-gray-700">
                                J'accepte les termes et conditions
                            </label>
                            @if(errors != null && errors.containsKey("terms"))
                                <p class="text-red-600">${errors.get("terms")}</p>
                            @endif
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            S'inscrire
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-600">
                        Vous avez déjà un compte?
                        <a href="/login" class="font-medium text-blue-600 hover:text-blue-500">
                            Se connecter
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
`
)
