@param String title
@param String content

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>${title}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <!-- Header Section -->
    <header class="bg-primary text-white py-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0"><a class="text-white text-decoration-none" href="/"><%%= appName %></a></h1>
                <nav>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/about">À propos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/login">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/dashboard">Tableau de bord</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container py-4">
        <!-- Alert Messages -->
        @if(alertMessage != null)
            <div class="alert alert-${alertType} alert-dismissible fade show" role="alert">
                <span>${alertMessage}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        @endif

        <!-- Content Section -->
        ${content}
    </main>

    <!-- Footer Section -->
    <footer class="bg-light py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 <%%= appName %> - Propulsé par Spring Boot</p>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
