package <%= packageName %>.repository.search;

import org.springframework.data.elasticsearch.repository.ElasticsearchRepository;
import org.springframework.stereotype.Repository;

import <%= packageName %>.document.ProductDocument;

/**
 * Repository pour accéder aux documents Product dans Elasticsearch.
 */
@Repository
public interface ProductSearchRepository extends ElasticsearchRepository<ProductDocument, String> {

    /**
     * Recherche des produits par nom (recherche partielle).
     *
     * @param name Le nom à rechercher
     * @return Liste des produits correspondants
     */
    Iterable<ProductDocument> findByNameContaining(String name);

    /**
     * Recherche des produits par catégorie.
     *
     * @param category La catégorie à rechercher
     * @return Liste des produits correspondants
     */
    Iterable<ProductDocument> findByCategory(String category);

    /**
     * Recherche des produits disponibles.
     *
     * @return Liste des produits disponibles
     */
    Iterable<ProductDocument> findByAvailableTrue();
}
