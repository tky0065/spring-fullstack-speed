package <%= packageName %>.config;

import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Contact;
import io.swagger.v3.oas.models.info.Info;
import io.swagger.v3.oas.models.info.License;
import io.swagger.v3.oas.models.servers.Server;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import java.util.List;

/**
 * Configuration pour la documentation OpenAPI/Swagger
 * Cette classe configure la documentation API qui sera utilis√©e par le frontend
 */
@Configuration
public class OpenApiConfig {

    @Value("${app.api.title:<%= appName %> API}")
    private String apiTitle;

    @Value("${app.api.version:1.0.0}")
    private String apiVersion;

    @Value("${app.api.description:API Documentation for <%= appName %>}")
    private String apiDescription;

    @Bean
    public OpenAPI customOpenAPI() {
        return new OpenAPI()
                .info(new Info()
                        .title(apiTitle)
                        .version(apiVersion)
                        .description(apiDescription)
                        .contact(new Contact()
                                .name("<%= packageName %>")
                                .email("contact@example.com")
                                .url("https://example.com"))
                        .license(new License()
                                .name("MIT")
                                .url("https://opensource.org/licenses/MIT")))
                .servers(List.of(
                        new Server()
                                .url("/")
                                .description("Server URL in Production environment"),
                        new Server()
                                .url("http://localhost:8080")
                                .description("Server URL in Development environment")));
    }
}
