package com.example.app.security.annotation;

import org.springframework.security.access.prepost.PreAuthorize;

import java.lang.annotation.ElementType;
import java.lang.annotation.Retention;
import java.lang.annotation.RetentionPolicy;
import java.lang.annotation.Target;

/**
 * Annotation pour restreindre l'accès aux utilisateurs authentifiés avec un rôle spécifique
 * Cette annotation accepte un paramètre pour spécifier le rôle requis
 */
@Target({ElementType.METHOD, ElementType.TYPE})
@Retention(RetentionPolicy.RUNTIME)
@PreAuthorize("hasRole(#role)")
public @interface RequireRole {
    /**
     * Le rôle requis pour accéder à la ressource
     */
    String value();
}
