package <%= packageName %>.util;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.UUID;

/**
 * Classe utilitaire avec des méthodes pratiques pour l'application
 */
public class AppUtils {

    private static final Logger logger = LoggerFactory.getLogger(AppUtils.class);
    private static final DateTimeFormatter DATE_FORMATTER = DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss");

    /**
     * Génère un identifiant unique
     */
    public static String generateUniqueId() {
        return UUID.randomUUID().toString();
    }

    /**
     * Formate la date et l'heure actuelles
     */
    public static String getCurrentFormattedDateTime() {
        return LocalDateTime.now().format(DATE_FORMATTER);
    }

    /**
     * Journalise un message avec un préfixe d'application
     */
    public static void logApplicationMessage(String message) {
        logger.info("[<%= appName.toUpperCase() %>] {}", message);
    }

    /**
     * Tronque une chaîne si elle dépasse une longueur maximale
     */
    public static String truncateString(String input, int maxLength) {
        if (input == null) {
            return null;
        }
        if (input.length() <= maxLength) {
            return input;
        }
        return input.substring(0, maxLength - 3) + "...";
    }
}
