package <%= packageName %>.config;

import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.stereotype.Component;

/**
 * Propriétés de configuration pour Inertia.js.
 * Ces propriétés sont configurées dans application.yml.
 */
@Component
@ConfigurationProperties(prefix = "app.inertia")
public class InertiaProperties {

    /**
     * Version de l'application (utilisée pour l'invalidation du cache).
     */
    private String version = "1.0.0";

    /**
     * URL de base pour les assets.
     */
    private String assetsUrl = "/";

    /**
     * Chemin du template racine.
     */
    private String rootView = "app";

    /**
     * Données partagées globales accessibles à toutes les pages.
     */
    private boolean exposeExceptionErrors = false;

    public String getVersion() {
        return version;
    }

    public void setVersion(String version) {
        this.version = version;
    }

    public String getAssetsUrl() {
        return assetsUrl;
    }

    public void setAssetsUrl(String assetsUrl) {
        this.assetsUrl = assetsUrl;
    }

    public String getRootView() {
        return rootView;
    }

    public void setRootView(String rootView) {
        this.rootView = rootView;
    }

    public boolean isExposeExceptionErrors() {
        return exposeExceptionErrors;
    }

    public void setExposeExceptionErrors(boolean exposeExceptionErrors) {
        this.exposeExceptionErrors = exposeExceptionErrors;
    }
}
