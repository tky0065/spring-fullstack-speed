# Properties for production
logging.level.root=INFO
logging.level.<%= packageName %>=INFO

# Disable H2 console in production
spring.h2.console.enabled=false

# More secure database configuration for production
# spring.datasource.username=prod_user
# spring.datasource.password=prod_secret

<% if (!authType || authType === 'JWT' || authType === 'JWT+OAuth2') { %>
# JWT Configuration - Use environment variables in production
jwt.secret=${JWT_SECRET:change_this_in_production_environment}
jwt.expirationMs=${JWT_EXPIRATION_MS:86400000}
jwt.refreshExpirationMs=${JWT_REFRESH_EXPIRATION_MS:604800000}
<% } %>

# Configuration JWT
jwt.secret=your_jwt_secret_key***********************************
jwt.expirationMs=3600000
