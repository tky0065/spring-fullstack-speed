# Exemple de fichiers de secrets pour l'application
# IMPORTANT: Ne jamais committer ce fichier avec les véritables valeurs
# Renommez-le en .env pour l'utiliser avec docker-compose

# Configuration de l'application
APP_PORT=8080
SPRING_PROFILES_ACTIVE=docker

# Credentials de la base de données
<% if (dbDetails.type === 'postgres') { %>
DB_USERNAME=postgres
DB_PASSWORD=postgres_password
DB_NAME=postgres_db
POSTGRES_PORT=5432
<% } else if (dbDetails.type === 'mysql') { %>
DB_USERNAME=mysql_user
DB_PASSWORD=mysql_password
DB_ROOT_PASSWORD=root_password
DB_NAME=mysql_db
MYSQL_PORT=3306
<% } else if (dbDetails.type === 'mongodb') { %>
DB_USERNAME=mongodb_user
DB_PASSWORD=mongodb_password
DB_NAME=mongodb_db
MONGODB_PORT=27017
<% } %>

<% if (services.includes('elasticsearch')) { %>
# Elasticsearch
ES_PORT=9200
<% } %>

<% if (services.includes('kibana')) { %>
# Kibana
KIBANA_PORT=5601
<% } %>

<% if (services.includes('redis')) { %>
# Redis
REDIS_PORT=6379
<% } %>

<% if (services.includes('rabbitmq')) { %>
# RabbitMQ
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
<% } %>

<% if (services.includes('prometheus')) { %>
# Prometheus
PROMETHEUS_PORT=9090
<% } %>

<% if (services.includes('grafana')) { %>
# Grafana
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3000
<% } %>

# Autres configurations
TZ=UTC
JAVA_OPTS=-Xms256m -Xmx512m
