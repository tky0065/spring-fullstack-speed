package <%= packageName %>.dto;

import java.io.Serializable;
import java.time.Instant;

/**
 * DTO pour repr√©senter un message WebSocket.
 */
public class WebSocketMessageDTO implements Serializable {

    private static final long serialVersionUID = 1L;

    private String from;
    private String to;
    private String content;
    private String type;
    private Instant timestamp;

    // Constructeurs
    public WebSocketMessageDTO() {
        this.timestamp = Instant.now();
    }

    public WebSocketMessageDTO(String content) {
        this();
        this.content = content;
    }

    public WebSocketMessageDTO(String from, String content) {
        this();
        this.from = from;
        this.content = content;
    }

    public WebSocketMessageDTO(String from, String to, String content) {
        this();
        this.from = from;
        this.to = to;
        this.content = content;
    }

    // Getters et Setters
    public String getFrom() {
        return from;
    }

    public void setFrom(String from) {
        this.from = from;
    }

    public String getTo() {
        return to;
    }

    public void setTo(String to) {
        this.to = to;
    }

    public String getContent() {
        return content;
    }

    public void setContent(String content) {
        this.content = content;
    }

    public String getType() {
        return type;
    }

    public void setType(String type) {
        this.type = type;
    }

    public Instant getTimestamp() {
        return timestamp;
    }

    public void setTimestamp(Instant timestamp) {
        this.timestamp = timestamp;
    }

    @Override
    public String toString() {
        return "WebSocketMessageDTO{" +
            "from='" + from + '\'' +
            ", to='" + to + '\'' +
            ", type='" + type + '\'' +
            ", timestamp=" + timestamp +
            '}';
    }
}
