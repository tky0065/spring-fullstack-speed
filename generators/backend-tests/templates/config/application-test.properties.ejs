# Configuration spécifique aux tests
spring.profiles.active=test

# Base de données H2 en mémoire pour les tests
spring.datasource.url=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
spring.datasource.username=sa
spring.datasource.password=
spring.datasource.driver-class-name=org.h2.Driver

spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.show_sql=true

# Désactiver la console H2 pour les tests
spring.h2.console.enabled=false

# Configuration de sécurité pour les tests
spring.security.user.name=testuser
spring.security.user.password=password
spring.security.user.roles=USER

# Configuration JWT pour les tests
app.jwt.secret=test-secret-key-must-be-at-least-64-characters-long-for-secured-jwt-token-generation-in-tests
app.jwt.expiration=86400000

# Désactiver les logs trop verbeux pendant les tests
logging.level.org.springframework=WARN
logging.level.org.hibernate=WARN
logging.level.<%= packageName %>=INFO

# Configuration Redis pour les tests (si nécessaire)
spring.redis.host=localhost
spring.redis.port=6379

# Configuration Email pour les tests (si nécessaire)
spring.mail.host=localhost
spring.mail.port=3025
spring.mail.username=test
spring.mail.password=test
spring.mail.properties.mail.smtp.auth=false

# Configuration WebSocket pour les tests (si nécessaire)
spring.websocket.path=/ws

# Configuration pour les tests de performances
performance.test.acceptable-response-time=500
