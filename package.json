{
  "name": "@enokdev/spring-fullstack-speed",
  "version": "1.0.0",
  "description": "Générateur pour créer rapidement des applications Spring Boot avec frontend (Vue, React, Angular)",
  "main": "index.js",
  "type": "module",
  "bin": {
    "sfs": "cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:generators": "jest -c jest-generators.config.js",
    "test:commands": "jest -c jest-commands.config.js",
    "test:simple": "jest -c jest-simple.config.js",
    "build": "npm run clean && tsc && npm run copy-templates",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prebuild": "npm run clean",
    "postbuild": "node scripts/copy-templates.js",
    "copy-templates": "node scripts/copy-templates.js",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enokson/spring-fullstack-speed.git"
  },
  "keywords": [
    "spring-boot",
    "spring",
    "java",
    "vue",
    "angular",
    "thymeleaf",
    "jte",
    "inertia"
  ],
  "author": "enokson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enokson/spring-fullstack-speed/issues"
  },
  "files": [
    "dist",
    "cli.js",
    "scripts/copy-templates.js"
  ],
  "homepage": "https://github.com/enokson/spring-fullstack-speed#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.16",
    "pluralize": "^8.0.0",
    "yeoman-environment": "^4.4.0",
    "yeoman-generator": "^7.1.1",
    "yosay": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.13.3",
    "@types/pluralize": "^0.0.33",
    "@types/yosay": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "chai": "^5.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.6",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typescript": "~5.4.5",
    "typescript-eslint": "^8.34.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
